<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>47.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>PSIFramePlus</masterLabel>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage,lightningCommunity__Default">
            <property name="url" type="String" label="IFrame URL" default="https://www.salesforce.com"/>
            <property name="width" type="String" label="IFrame Width" default="100%"/>
            <property name="height" type="String" label="IFrame Height" default="600"/>
            <property name="frameBorder" type="String" label="IFrame Border" datasource="0,1" default="0"/>
            <property name="scrolling" type="String" label="Display scrollbars?"  datasource="yes,no,auto" default="auto"/>
            <property name="cssStyle" type="String" label="CSS Styling"/>
        </targetConfig>
    </targetConfigs>

</LightningComponentBundle>